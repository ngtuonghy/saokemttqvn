generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
 
model Statement {
  id    Int     @id @default(autoincrement())
  doc_no String
  credit Decimal @db.Decimal(20, 0)
  balance Decimal? @db.Decimal(20, 0)
  name_bank String
  date DateTime
  page_number Int
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
